{
  "name": "music-publishing-system",
  "version": "1.0.0",
  "private": true,
  "description": "Music Publishing Royalty Management System",
  "workspaces": [
    "packages/*",
    "packages/shared/*",
    "apps/*"
  ],
  "scripts": {
    "dev:admin": "npm run dev --workspace=admin-portal",
    "dev:portal": "npm run dev --workspace=songwriter-portal",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
